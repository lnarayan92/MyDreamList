<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    tools:context="com.android_tutorials.lakshminarayan.mydreamlist.DreamDescriptionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dreamDescriptionLabel"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:text="Add your dreams to the bucket!"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/addDreamEditView"
        android:padding="20dp"
        android:layout_below="@+id/dreamDescriptionLabel"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/addDreamToBucketBtn"
        android:onClick="addDreamToBucket"
        android:layout_below="@id/addDreamEditView"
        android:text="Done"/>


</RelativeLayout>
